doctype html
html
  head
    title Registro
    link(rel="stylesheet", href="style.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
   
  body
    h1 Nuevo Registro
    form(action="/new", method="POST" class="form-group")
      div(class="form-group" , class="form-control")
        label Fecha:
        input(type="date", name="fecha",class="form-control", required=true)
      div(class="form-group")
        label Hora:
        input(type="time", name="hora",class="form-control", required=true)
      div(class="form-group")
        label Teléfono:
        input(type="text", name="telefono",class="form-control", required=true)
      div(class="form-group")
        label Tipo de llamada:
        select(name="subdireccion",class="form-control" required=true)
          option(value="CALL CENTER") CALL CENTER
          option(value="ASESORIA") ASESORÍA
          option(value="DEFENSORIA") DEFENSORÍA
          option(value="FORANEOS") FORÁNEOS
          option(value="MEDICINA LEGAL") MEDICINA LEGAL
          option(value="TRANSPARENCIA") TRANSPARENCIA
          option(value="INFORMES") INFORMES
          option(value="EXTENSIONES") EXTENSIONES 
          option(value="GRABACION") GRABACION
          option(value="NO CONTESTA") NO CONTESTA
          option(value="PROBLEMA COMUNICACIÓN") PROBLEMA COMUNICACIÓN
          
      div(class="form-group")
        label Extensión 
        input(type="text" name="ext",class="form-control", required=true)
      div
      div(class="form-group")
        label Observaciones:
        textarea(name="observaciones" ,class="form-control")
      div(class="form-group")
        button(type="submit" class="btn btn-primary") Guardar
