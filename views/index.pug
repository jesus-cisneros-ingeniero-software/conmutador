doctype html
html(lang="es_mx")
  head
    title Registros
    link(rel="stylesheet", href="style.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    h1 Lista de Registros
    a(href="/new") Nuevo Registro
    table(class="table")
      thead(class="thead-dark")
        tr
          th ID
          th Fecha
          th Hora
          th Teléfono
          th Tipo de llamada
          th Observaciones
          th Extensión
      tbody
        each registro in registros
          tr
            td= registro.id
            td= registro.fecha
            td= registro.hora
            td= registro.telefono
            td= registro.subdireccion
            td= registro.observaciones
            td= registro.ext
    a(href="/")        
